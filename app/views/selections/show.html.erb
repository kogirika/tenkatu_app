<%# ヘッダー %>
<div class="container mb-4 border-dark border-bottom">
  <ul class="nav">
    <li class="nav-item nav-link" style="widtd:70%">
      <b>Tenkatu_app 詳細ページ</b>
    </li>
    <li class="nav-item nav-link" style="widtd:15%%">
      ユーザー：<%= current_user.name %>
    </li>
    <li class="nav-item text-right" style="widtd:15%">
      <%= link_to 'ログアウト', destroy_user_session_path , metdod: :delete, class: "nav-link" %>
    </li>
  </ul>
</div>


<%# 一覧表示 %>
<div class="container ">
  <table>
    <tr>
      <td>フラグ</td>
      <td><%= @selection.live_flg %></td>
    </tr>
    <tr>
      <td>フェーズ</td>
      <td><%= @selection.phase.name %></td>
    </tr>
    <tr>
      <td>会社名</td>
      <td><%= @selection.company_name %></td>
    </tr>
    <tr>
      <td>職種</td>
      <td><%= @selection.position %></td>
    </tr>
    <tr>
      <td>URL</td>
      <td><%= @selection.url %></td>
    </tr>
    <tr>
      <td>要約</td>
      <td><%= @selection.sumally %></td>
    </tr>
    <tr>
      <td>良い点</td>
      <td><%= @selection.appeal %></td>
    </tr>
    <tr>
      <td>懸念点</td>
      <td><%= @selection.concern %></td>
    </tr>
    <tr>
      <td>メモ</td>
      <td><%= @selection.memo %></td>
    </tr>
    <% unless @selection.refusal_reason.blank? %>
    <tr>
      <td>落選理由</td>
      <td><%= @selection.refusal_reason %></td>
    </tr>
    <% end %>
    <tr>
      <td>エージェント</td>
      <td><%= @selection.agent %></td>
    </tr>
    <tr>
      <td>エントリー日</td>
      <td><%= @selection.entry_day %></td>
    </tr>
  </table>
</div>

<div>
  <%= link_to "戻る", root_path %>
</div>

<div>
  <%= link_to "削除", selection_path(@selection.id), method: :DELETE %>
</div>

<div>
  <%= link_to "編集", edit_selection_path(@selection.id) %>
</div>

<div>
  <%= link_to "面接新規作成", new_selection_interview_path(@selection.id) %>
</div>

<div class="container ">
<% @interviews.each do |i| %>
  <table>
    <tr>
      <td>面接日</td>
      <td><%= i.interview_day %></td>
    </tr>
    <tr>
      <td>担当者</td>
      <td><%= i.charge %></td>
    </tr>
    <tr>
      <td>メモ</td>
      <td><%= i.memo %></td>
    </tr>
    <tr>
      <td>操作</td>
      <td>
      <%= link_to "編集", edit_selection_interview_path(@selection.id,i.id) %>
      </td>
    </tr>
  </table>
<% end %>
</div>