<%# ヘッダー %>
<div class="container mb-4 border-dark border-bottom">
  <ul class="nav">
    <li class="nav-item nav-link" style="width:70%">
      <b>Tenkatu_app 編集</b>
    </li>
    <li class="nav-item nav-link" style="width:15%%">
      ユーザー：<%= current_user.name %>
    </li>
    <li class="nav-item text-right" style="width:15%">
      <%= link_to 'ログアウト', destroy_user_session_path , method: :delete, class: "nav-link" %>
    </li>
  </ul>
</div>

<%# 簡易登録 %>
  <div class="container">
    <%= form_with model: @selection, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class="form-row ">

        <div class="col">
          <%= f.radio_button :live_flg, true, class: "form-control " %> 選考中
          <%= f.radio_button :live_flg, false, class: "form-control " %> 落選
        </div>

        <div class="col">
          <div class="input-group">
              <label class="input-group-text" for="inputGroupSelect01">フェーズ:</label>
            <%= f.collection_select(:phase_id, Phase.all, :id, :name, {}, class: "form-control")%>
          </div>
        </div>

        <div class="col">
          <%= f.text_field :company_name, placeholder:"会社名", maxlength:"30", class: "form-control " %>
        </div>

        <div class="col">
          <%= f.text_field :position, placeholder:"職種", maxlength:"30", class: "form-control " %>
        </div>

        <div class="col">
          <%= f.text_field :url, placeholder:"URL", class: "form-control " %>
        </div>

        <div class="col">
          <%= f.text_field :place, placeholder:"場所", maxlength:"30", class: "form-control " %>
        </div>

        <div class="col">
          <%= f.text_area :sumally, placeholder:"要約", class: "form-control" %>
        </div>

        <div class="col">
          <%= f.text_area :appeal, placeholder:"良い点", class: "form-control" %>
        </div>

        <div class="col">
          <%= f.text_area :concern, placeholder:"懸念点", class: "form-control" %>
        </div>

        <div class="col">
          <%= f.text_area :memo, placeholder:"メモ", class: "form-control" %>
        </div>

        <div class="col">
          <%= f.text_field :agent, placeholder:"エージェント", maxlength:"20", class: "form-control " %>
        </div>

        <div class="col">
          <%= f.date_field :entry_day, value: Time.now.strftime("%Y-%m-%d"), class: "form-control " %>
        </div>

        <div class="col">
          <%= f.submit "登録" ,class: "form-control btn btn-primary" %>
        </div>

      </div>
    </div>
    <% end %>
  </div>
