<%# インプット部分の部分テンプレート %>

<body>
  <%# ヘッダー %>
  <div class="container mb-4 border-dark border-bottom">
    <ul class="nav">
      <li class="nav-item nav-link" style="width:20%">
        <%= link_to "Tenkatu_app", root_path, class:"text-body font-weight-bold"  %>
      </li>
      <li class="nav-item nav-link" style="width:40%">
        <h6>面接登録・編集</h6>
      </li>
      <li class="nav-item nav-link" style="width:15%%">
        ユーザー：<%= current_user.name %>
      </li>
      <li class="nav-item text-right" style="width:15%">
        <%= link_to 'ログアウト', destroy_user_session_path , metdod: :delete, class: "nav-link" %>
      </li>
    </ul>
  </div>

  <%# 入力エリア %>
  <div class="container">
    <div class="col text-right">
      <%= link_to "戻る", selection_path(params[:selection_id]), class:"btn btn-link" %>
    </div>
    <%= form_with model: [selection, interview], local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>
    <div class="form-group">

        <div class="col-4 input-group">
        <label class="input-group-text" for="interview_dayInput">面接日:</label>
          <%= f.date_field :interview_day, value: Time.now.strftime("%Y-%m-%d"), class: "form-control", id:"entry_dayInput" %>
        </div>

        <div class="col input-group">
         <label class="input-group-text" for="chargeInput">担当者名:</label>
          <%= f.text_field :charge, placeholder:"担当者名", maxlength:"30", class: "form-control", id:"chargeInput"%>
        </div>

        <div class="col input-group">
        <label class="input-group-text" for="memoInput">メモ:</label>
          <%= f.text_area :memo, placeholder:"メモ", class: "form-control", id:"memoInput", rows:"3" %>
        </div>

        <div class="col mt-2">
          <%= f.submit "登録" ,class: "form-control btn btn-primary" %>
        </div>

      </div>
    <% end %>
    </div>
</body>